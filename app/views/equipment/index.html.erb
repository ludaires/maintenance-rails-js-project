<h1> Equipment List </h1>

<div class="pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Equipment</h1>        
    <div class="table-responsive pt-2">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                <th>#</th>          
                <th>Name</th>       
                <th>Last Maintenance</th>          
                <th>Date</th>      
                <th>Next Maintenance</th>     
                </tr>
            </thead>
            <tbody>       
                <% Equipment.all.each do |equipment| %>
                <tr>
                <th scope="row"><%= link_to equipment.code, user_equipment_path(@current_user, equipment) %></td>
                <td><%= equipment.name %></td>          
                <td>
                    <% if !equipment.maintenances.empty? %>
                    <% last = equipment.maintenances.last %>
                    <a href="/maintenances/<%= last.id %>"><%= last.status %></a>
                    <% end %>
                </td>  
                <td>
                    <% if !equipment.maintenances.empty? %>
                        <% last = equipment.maintenances.last %>
                        <%= last.updated_at %>
                    <% end %>
                </td>   
                <td>
                    <% if !equipment.maintenances.empty? %>
                        <% last = equipment.maintenances.last %>
                        <%= last.next_maintenance_date %>
                    <% end %>
                </td>           
                </tr>
                <%end%>       
            </tbody>
        </table>
    </div>    
</div>
