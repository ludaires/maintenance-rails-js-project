<% if object.status == "In progress" || current_user.admin  %>
    <p><%= link_to "Add new Item to be Inspected", new_maintenance_inspection_path(object, Inspection.new), class: "btn btn-primary" %></p>
    <p><%= link_to "Close Maintenance", edit_maintenance_path(object), data: {confirm: "Once you close this maintenance you can't edit anymore. Are you sure about close it?"}, class: "btn btn-warning" %>  | <%= link_to "Delete Maintenance", maintenance_path(object), method: :delete, data: {confirm: "Are you sure you want to delete this maintenance?"}, class: "btn btn-danger" %></p>
<% else object.status != "In progress" || current_user.admin %>
    <%= link_to "Delete Maintenance", maintenance_path(object), method: :delete, data: {confirm: "Are you sure you want to delete this maintenance?"}, class: "btn btn-danger" %><br><br>
<% end %>